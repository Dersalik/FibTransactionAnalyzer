@using System.Globalization
@model TransactionAnalyzer.Models.TransactionAnalysisResult
@using Transaction
@{
    ViewData["Title"] = "Your Financial Insights";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        :root {
            --primary: #667eea;
            --primary-dark: #5568d3;
            --secondary: #764ba2;
            --success: #10b981;
            --danger: #ef4444;
            --warning: #f59e0b;
            --info: #3b82f6;
            --light: #f8f9fa;
            --dark: #1f2937;
            --card-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            --card-shadow-hover: 0 8px 30px rgba(0, 0, 0, 0.12);
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: #333;
            line-height: 1.6;
            min-height: 100vh;
            padding-bottom: 60px;
        }

        /* Header */
        .header {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
            position: sticky;
            top: 0;
            z-index: 100;
            animation: slide-down 0.5s ease;
        }

        @keyframes slide-down {
            from {
                transform: translateY(-100%);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .header-content {
            max-width: 1400px;
            margin: 0 auto;
            padding: 20px 30px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 20px;
        }

        .header-title h1 {
            font-size: 1.8rem;
            font-weight: 700;
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .header-subtitle {
            font-size: 0.9rem;
            color: #666;
            margin-top: 4px;
        }

        .header-actions {
            display: flex;
            gap: 12px;
            align-items: center;
        }

        .btn {
            padding: 10px 20px;
            border-radius: 10px;
            border: none;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 0.9rem;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            color: white;
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(102, 126, 234, 0.4);
        }

        /* Container */
        .container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 40px 30px;
        }

        /* Currency Tabs */
        .currency-tabs {
            display: flex;
            gap: 12px;
            margin-bottom: 40px;
            flex-wrap: wrap;
            animation: fade-in 0.5s ease 0.2s both;
        }

        @keyframes fade-in {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .currency-tab {
            background: rgba(255, 255, 255, 0.9);
            padding: 16px 28px;
            border-radius: 12px;
            cursor: pointer;
            transition: all 0.3s ease;
            border: 2px solid transparent;
            box-shadow: var(--card-shadow);
        }

        .currency-tab:hover {
            transform: translateY(-2px);
            box-shadow: var(--card-shadow-hover);
        }

        .currency-tab.active {
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            color: white;
            border-color: rgba(255, 255, 255, 0.3);
        }

        .currency-tab-label {
            font-size: 0.85rem;
            opacity: 0.8;
            margin-bottom: 4px;
        }

        .currency-tab.active .currency-tab-label {
            opacity: 0.9;
        }

        .currency-tab-value {
            font-size: 1.3rem;
            font-weight: 700;
        }

        /* Currency Content */
        .currency-content {
            display: none;
            animation: fade-in-scale 0.4s ease;
        }

        .currency-content.active {
            display: block;
        }

        @keyframes fade-in-scale {
            from {
                opacity: 0;
                transform: scale(0.95);
            }
            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        /* Hero Stats */
        .hero-stats {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }

        .stat-card {
            background: white;
            border-radius: 16px;
            padding: 28px;
            box-shadow: var(--card-shadow);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 4px;
            height: 100%;
            background: linear-gradient(180deg, var(--primary) 0%, var(--secondary) 100%);
        }

        .stat-card:hover {
            transform: translateY(-4px);
            box-shadow: var(--card-shadow-hover);
        }

        .stat-card-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin-bottom: 16px;
        }

        .stat-card.income .stat-card-icon {
            background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        }

        .stat-card.expense .stat-card-icon {
            background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
        }

        .stat-card.net .stat-card-icon {
            background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
        }

        .stat-card.fees .stat-card-icon {
            background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
        }

        .stat-card-label {
            font-size: 0.9rem;
            color: #666;
            margin-bottom: 8px;
        }

        .stat-card-value {
            font-size: 2rem;
            font-weight: 800;
            line-height: 1;
        }

        .stat-card.income .stat-card-value {
            color: var(--success);
        }

        .stat-card.expense .stat-card-value {
            color: var(--danger);
        }

        .stat-card.net .stat-card-value {
            color: var(--info);
        }

        .stat-card.fees .stat-card-value {
            color: var(--warning);
        }

        /* Insight Cards Grid */
        .insights-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(500px, 1fr));
            gap: 24px;
            margin-bottom: 40px;
        }

        @media (max-width: 768px) {
            .insights-grid {
                grid-template-columns: 1fr;
            }
        }

        .insight-card {
            background: white;
            border-radius: 16px;
            padding: 28px;
            box-shadow: var(--card-shadow);
            transition: all 0.3s ease;
        }

        .insight-card:hover {
            transform: translateY(-4px);
            box-shadow: var(--card-shadow-hover);
        }

        .insight-card-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 24px;
        }

        .insight-card-title {
            font-size: 1.2rem;
            font-weight: 700;
            color: var(--dark);
        }

        .insight-card-subtitle {
            font-size: 0.85rem;
            color: #666;
            margin-top: 4px;
        }

        .insight-card-icon {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.2rem;
        }

        .chart-container {
            position: relative;
            height: 300px;
        }

        /* Full Width Cards */
        .full-width-card {
            background: white;
            border-radius: 16px;
            padding: 32px;
            box-shadow: var(--card-shadow);
            margin-bottom: 24px;
        }

        /* Table Styles */
        .data-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
        }

        .data-table thead th {
            background: #f8f9fa;
            padding: 14px;
            text-align: left;
            font-weight: 600;
            font-size: 0.85rem;
            color: #666;
            border-bottom: 2px solid #e5e7eb;
        }

        .data-table thead th:first-child {
            border-radius: 8px 0 0 0;
        }

        .data-table thead th:last-child {
            border-radius: 0 8px 0 0;
        }

        .data-table tbody tr {
            transition: background 0.2s ease;
        }

        .data-table tbody tr:hover {
            background: #f8f9fa;
        }

        .data-table tbody td {
            padding: 14px;
            border-bottom: 1px solid #f1f3f5;
        }

        .badge {
            display: inline-block;
            padding: 4px 12px;
            border-radius: 6px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .badge-primary {
            background: rgba(102, 126, 234, 0.1);
            color: var(--primary);
        }

        .badge-success {
            background: rgba(16, 185, 129, 0.1);
            color: var(--success);
        }

        .badge-danger {
            background: rgba(239, 68, 68, 0.1);
            color: var(--danger);
        }

        /* Expandable Section */
        .expandable-section {
            margin-top: 20px;
        }

        .expand-toggle {
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            color: white;
            border: none;
            padding: 12px 24px;
            border-radius: 10px;
            cursor: pointer;
            font-weight: 600;
            transition: all 0.3s ease;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .expand-toggle:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
        }

        .expandable-content {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.4s ease;
        }

        .expandable-content.expanded {
            max-height: 5000px;
        }

        /* Income Stats Card */
        .income-stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .income-stat-item {
            text-align: center;
            padding: 20px;
            background: #f8f9fa;
            border-radius: 12px;
        }

        .income-stat-label {
            font-size: 0.85rem;
            color: #666;
            margin-bottom: 8px;
        }

        .income-stat-value {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--primary);
        }

        .income-stat-detail {
            font-size: 0.75rem;
            color: #999;
            margin-top: 4px;
        }

        /* Counterparty Card */
        .counterparty-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 16px;
            border-radius: 10px;
            margin-bottom: 12px;
            background: #f8f9fa;
            transition: all 0.2s ease;
        }

        .counterparty-item:hover {
            background: #e9ecef;
            transform: translateX(4px);
        }

        .counterparty-name {
            font-weight: 600;
            color: var(--dark);
        }

        .counterparty-count {
            font-size: 0.8rem;
            color: #666;
            margin-top: 2px;
        }

        .counterparty-amounts {
            text-align: right;
        }

        .counterparty-sent {
            color: var(--danger);
            font-weight: 600;
            font-size: 0.9rem;
        }

        .counterparty-received {
            color: var(--success);
            font-weight: 600;
            font-size: 0.9rem;
        }

        .counterparty-net {
            font-weight: 700;
            font-size: 1rem;
            margin-top: 4px;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .container {
                padding: 20px 16px;
            }

            .hero-stats {
                grid-template-columns: 1fr;
            }

            .header-content {
                flex-direction: column;
                align-items: flex-start;
            }

            .stat-card-value {
                font-size: 1.6rem;
            }

            .insights-grid {
                grid-template-columns: 1fr;
            }
        }

        /* Animation Delays */
        .stat-card:nth-child(1) { animation: fade-in 0.5s ease 0.1s both; }
        .stat-card:nth-child(2) { animation: fade-in 0.5s ease 0.2s both; }
        .stat-card:nth-child(3) { animation: fade-in 0.5s ease 0.3s both; }
        .stat-card:nth-child(4) { animation: fade-in 0.5s ease 0.4s both; }

        .insight-card:nth-child(1) { animation: fade-in 0.5s ease 0.3s both; }
        .insight-card:nth-child(2) { animation: fade-in 0.5s ease 0.4s both; }
        .insight-card:nth-child(3) { animation: fade-in 0.5s ease 0.5s both; }
        .insight-card:nth-child(4) { animation: fade-in 0.5s ease 0.6s both; }

        .full-width-card { animation: fade-in 0.5s ease 0.7s both; }

        /* Loading State */
        .loading-shimmer {
            background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
            background-size: 200% 100%;
            animation: shimmer 1.5s infinite;
        }

        @keyframes shimmer {
            0% { background-position: 200% 0; }
            100% { background-position: -200% 0; }
        }
    </style>
</head>
<body>
    <!-- Header -->
    <div class="header">
        <div class="header-content">
            <div class="header-title">
                <h1>üí∞ Your Financial Insights</h1>
                <div class="header-subtitle">
                    Analysis generated on @Model.AnalysisDate.ToString("MMMM dd, yyyy 'at' HH:mm") UTC
                    @if (Model.DateFrom.HasValue || Model.DateTo.HasValue)
                    {
                        <span> ‚Ä¢ Filtered:
                            @if (Model.DateFrom.HasValue && Model.DateTo.HasValue)
                            {
                                <span>@Model.DateFrom.Value.ToString("MMM dd, yyyy") - @Model.DateTo.Value.ToString("MMM dd, yyyy")</span>
                            }
                            else if (Model.DateFrom.HasValue)
                            {
                                <span>From @Model.DateFrom.Value.ToString("MMM dd, yyyy")</span>
                            }
                            else if (Model.DateTo.HasValue)
                            {
                                <span>Until @Model.DateTo.Value.ToString("MMM dd, yyyy")</span>
                            }
                        </span>
                    }
                </div>
            </div>
            <div class="header-actions">
                <a href="@Url.Action("Index", "Analysis")" class="btn btn-primary">
                    <span>‚Üª</span> Analyze New File
                </a>
            </div>
        </div>
    </div>

    <div class="container">
        <!-- Overall Stats -->
        <div class="hero-stats" style="margin-bottom: 40px;">
            <div class="stat-card">
                <div class="stat-card-icon" style="background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);">üìù</div>
                <div class="stat-card-label">Total Transactions</div>
                <div class="stat-card-value" style="color: #6366f1;">@Model.TotalTransactionCount</div>
            </div>
            <div class="stat-card">
                <div class="stat-card-icon" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">‚úì</div>
                <div class="stat-card-label">Analyzed</div>
                <div class="stat-card-value" style="color: #10b981;">@Model.FilteredTransactionCount</div>
            </div>
            <div class="stat-card">
                <div class="stat-card-icon" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">üí±</div>
                <div class="stat-card-label">Currencies</div>
                <div class="stat-card-value" style="color: #f59e0b;">@Model.CurrencyAnalyses.Count</div>
            </div>
            <div class="stat-card">
                <div class="stat-card-icon" style="background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);">‚äò</div>
                <div class="stat-card-label">Filtered Out</div>
                <div class="stat-card-value" style="color: #ef4444;">@(Model.TotalTransactionCount - Model.FilteredTransactionCount)</div>
            </div>
        </div>

        <!-- Currency Tabs -->
        <div class="currency-tabs">
            @{
                var currencyIndex = 0;
            }
            @foreach (var currencyAnalysis in Model.CurrencyAnalyses)
            {
                var currency = currencyAnalysis.Key;
                var analysis = currencyAnalysis.Value;
                var isActive = currencyIndex == 0 ? "active" : "";
                currencyIndex++;

                <div class="currency-tab @isActive" onclick="switchCurrency('@currency')">
                    <div class="currency-tab-label">@currency</div>
                    <div class="currency-tab-value">@analysis.TransactionCount txns</div>
                </div>
            }
        </div>

        <!-- Currency Content Sections -->
        @{
            currencyIndex = 0;
        }
        @foreach (var currencyAnalysis in Model.CurrencyAnalyses)
        {
            var currency = currencyAnalysis.Key;
            var analysis = currencyAnalysis.Value;
            var currencyCulture = new CultureInfo(currency.GetCultureCode());
            var isActive = currencyIndex == 0 ? "active" : "";
            currencyIndex++;

            <div class="currency-content @isActive" id="currency_@currency">
                <!-- Hero Stats for Currency -->
                <div class="hero-stats">
                    <div class="stat-card income">
                        <div class="stat-card-icon">‚Üó</div>
                        <div class="stat-card-label">Total Income</div>
                        <div class="stat-card-value">@analysis.TotalInflow.ToString("C0", currencyCulture)</div>
                    </div>
                    <div class="stat-card expense">
                        <div class="stat-card-icon">‚Üò</div>
                        <div class="stat-card-label">Total Expenses</div>
                        <div class="stat-card-value">@analysis.TotalOutflow.ToString("C0", currencyCulture)</div>
                    </div>
                    <div class="stat-card net">
                        <div class="stat-card-icon">@(analysis.NetAmount >= 0 ? "+" : "-")</div>
                        <div class="stat-card-label">Net Amount</div>
                        <div class="stat-card-value" style="color: @(analysis.NetAmount >= 0 ? "var(--success)" : "var(--danger)")">
                            @analysis.NetAmount.ToString("C0", currencyCulture)
                        </div>
                    </div>
                    <div class="stat-card fees">
                        <div class="stat-card-icon">üí≥</div>
                        <div class="stat-card-label">Total Fees</div>
                        <div class="stat-card-value">@analysis.TotalFees.ToString("C0", currencyCulture)</div>
                    </div>
                </div>

                <!-- Main Insights Grid -->
                <div class="insights-grid">
                    <!-- Balance Tracking Chart -->
                    <div class="insight-card">
                        <div class="insight-card-header">
                            <div>
                                <div class="insight-card-title">Balance Journey</div>
                                <div class="insight-card-subtitle">How your balance evolved over time</div>
                            </div>
                            <div class="insight-card-icon">üìà</div>
                        </div>
                        <div class="chart-container">
                            <canvas id="balanceChart_@currency"></canvas>
                        </div>
                    </div>

                    <!-- Monthly Cash Flow -->
                    <div class="insight-card">
                        <div class="insight-card-header">
                            <div>
                                <div class="insight-card-title">Monthly Cash Flow</div>
                                <div class="insight-card-subtitle">Income vs Expenses each month</div>
                            </div>
                            <div class="insight-card-icon">üíµ</div>
                        </div>
                        <div class="chart-container">
                            <canvas id="cashFlowChart_@currency"></canvas>
                        </div>
                    </div>

                    <!-- Transaction Types -->
                    <div class="insight-card">
                        <div class="insight-card-header">
                            <div>
                                <div class="insight-card-title">Transaction Types</div>
                                <div class="insight-card-subtitle">Where your money goes</div>
                            </div>
                            <div class="insight-card-icon">üéØ</div>
                        </div>
                        <div class="chart-container">
                            <canvas id="transactionTypesChart_@currency"></canvas>
                        </div>
                    </div>

                    <!-- Yearly Performance -->
                    @if (analysis.YearlyAnalyses.Any())
                    {
                        <div class="insight-card">
                            <div class="insight-card-header">
                                <div>
                                    <div class="insight-card-title">Yearly Performance</div>
                                    <div class="insight-card-subtitle">Long-term financial trends</div>
                                </div>
                                <div class="insight-card-icon">üìä</div>
                            </div>
                            <div class="chart-container">
                                <canvas id="yearlyChart_@currency"></canvas>
                            </div>
                        </div>
                    }
                </div>

                <!-- Income Statistics -->
                @if (analysis.MonthlyAnalyses.Any())
                {
                    <div class="full-width-card">
                        <div class="insight-card-header">
                            <div>
                                <div class="insight-card-title">Income Statistics</div>
                                <div class="insight-card-subtitle">Your earning patterns at a glance</div>
                            </div>
                            <div class="insight-card-icon">üí∞</div>
                        </div>
                        <div class="income-stats-grid">
                            <div class="income-stat-item">
                                <div class="income-stat-label">Average Monthly</div>
                                <div class="income-stat-value">@analysis.AverageMonthlyIncome.ToString("C0", currencyCulture)</div>
                            </div>
                            <div class="income-stat-item">
                                <div class="income-stat-label">Best Month</div>
                                <div class="income-stat-value" style="color: var(--success);">@analysis.MaxMonthlyIncome.ToString("C0", currencyCulture)</div>
                                @if (analysis.BestIncomeMonth != null)
                                {
                                    <div class="income-stat-detail">@analysis.BestIncomeMonth.MonthName</div>
                                }
                            </div>
                            <div class="income-stat-item">
                                <div class="income-stat-label">Worst Month</div>
                                <div class="income-stat-value" style="color: var(--warning);">@analysis.MinMonthlyIncome.ToString("C0", currencyCulture)</div>
                                @if (analysis.WorstIncomeMonth != null)
                                {
                                    <div class="income-stat-detail">@analysis.WorstIncomeMonth.MonthName</div>
                                }
                            </div>
                            <div class="income-stat-item">
                                <div class="income-stat-label">Total Months</div>
                                <div class="income-stat-value">@analysis.MonthlyAnalyses.Count</div>
                            </div>
                        </div>
                    </div>
                }

                <!-- Top Counterparties -->
                <div class="full-width-card">
                    <div class="insight-card-header">
                        <div>
                            <div class="insight-card-title">Top Financial Relationships</div>
                            <div class="insight-card-subtitle">People and businesses you interact with most</div>
                        </div>
                        <div class="insight-card-icon">üë•</div>
                    </div>
                    <div style="margin-top: 20px;">
                        @foreach (var counterparty in analysis.TopCounterparties.OrderByDescending(c => Math.Abs(c.TotalAmount)).Take(10))
                        {
                            <div class="counterparty-item">
                                <div>
                                    <div class="counterparty-name">@counterparty.Counterparty</div>
                                    <div class="counterparty-count">@counterparty.TransactionCount transactions</div>
                                </div>
                                <div class="counterparty-amounts">
                                    @if (counterparty.AmountSent != 0)
                                    {
                                        <div class="counterparty-sent">Sent: @counterparty.AmountSent.ToString("C0", currencyCulture)</div>
                                    }
                                    @if (counterparty.AmountReceived != 0)
                                    {
                                        <div class="counterparty-received">Received: @counterparty.AmountReceived.ToString("C0", currencyCulture)</div>
                                    }
                                    <div class="counterparty-net" style="color: @(counterparty.NetAmount >= 0 ? "var(--success)" : "var(--danger)")">
                                        Net: @counterparty.NetAmount.ToString("C0", currencyCulture)
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    @if (analysis.TopCounterparties.Count() > 10)
                    {
                        <div class="expandable-section">
                            <button class="expand-toggle" onclick="toggleExpand(this, 'counterparties_@currency')">
                                <span>Show All @analysis.TopCounterparties.Count() Counterparties</span>
                                <span>‚ñº</span>
                            </button>
                            <div class="expandable-content" id="counterparties_@currency">
                                @foreach (var counterparty in analysis.TopCounterparties.OrderByDescending(c => Math.Abs(c.TotalAmount)).Skip(10))
                                {
                                    <div class="counterparty-item">
                                        <div>
                                            <div class="counterparty-name">@counterparty.Counterparty</div>
                                            <div class="counterparty-count">@counterparty.TransactionCount transactions</div>
                                        </div>
                                        <div class="counterparty-amounts">
                                            @if (counterparty.AmountSent != 0)
                                            {
                                                <div class="counterparty-sent">Sent: @counterparty.AmountSent.ToString("C0", currencyCulture)</div>
                                            }
                                            @if (counterparty.AmountReceived != 0)
                                            {
                                                <div class="counterparty-received">Received: @counterparty.AmountReceived.ToString("C0", currencyCulture)</div>
                                            }
                                            <div class="counterparty-net" style="color: @(counterparty.NetAmount >= 0 ? "var(--success)" : "var(--danger)")">
                                                Net: @counterparty.NetAmount.ToString("C0", currencyCulture)
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>

                <!-- Transaction Type Details -->
                <div class="full-width-card">
                    <div class="insight-card-header">
                        <div>
                            <div class="insight-card-title">Transaction Type Breakdown</div>
                            <div class="insight-card-subtitle">Detailed analysis by transaction category</div>
                        </div>
                        <div class="insight-card-icon">üìã</div>
                    </div>
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Type</th>
                                <th>Count</th>
                                <th>Average</th>
                                <th>Largest</th>
                                <th>Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var typeAnalysis in analysis.TransactionTypeAnalyses.OrderByDescending(t => Math.Abs(t.TotalAmount)))
                            {
                                <tr>
                                    <td><strong>@typeAnalysis.TransactionType.Replace("_", " ")</strong></td>
                                    <td><span class="badge badge-primary">@typeAnalysis.Count</span></td>
                                    <td>@typeAnalysis.AverageAmount.ToString("C", currencyCulture)</td>
                                    <td>@typeAnalysis.LargestAmount.ToString("C", currencyCulture)</td>
                                    <td><strong>@typeAnalysis.TotalAmount.ToString("C", currencyCulture)</strong></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>

    <script>
        // Currency Switching
        function switchCurrency(currency) {
            // Update tabs
            document.querySelectorAll('.currency-tab').forEach(tab => {
                tab.classList.remove('active');
            });
            event.currentTarget.classList.add('active');

            // Update content
            document.querySelectorAll('.currency-content').forEach(content => {
                content.classList.remove('active');
            });
            document.getElementById('currency_' + currency).classList.add('active');
        }

        // Expand/Collapse
        function toggleExpand(button, contentId) {
            const content = document.getElementById(contentId);
            const isExpanded = content.classList.contains('expanded');

            if (isExpanded) {
                content.classList.remove('expanded');
                button.querySelector('span:last-child').textContent = '‚ñº';
                button.querySelector('span:first-child').textContent = button.querySelector('span:first-child').textContent.replace('Show Less', 'Show All');
            } else {
                content.classList.add('expanded');
                button.querySelector('span:last-child').textContent = '‚ñ≤';
                button.querySelector('span:first-child').textContent = button.querySelector('span:first-child').textContent.replace('Show All', 'Show Less');
            }
        }

        // Initialize Charts
        Chart.defaults.font.family = "'Inter', sans-serif";
        Chart.defaults.color = '#666';

        @foreach (var currencyAnalysis in Model.CurrencyAnalyses)
        {
            var currency = currencyAnalysis.Key;
            var analysis = currencyAnalysis.Value;

            <text>
            // Balance Chart
            if (document.getElementById('balanceChart_@currency')) {
                new Chart(document.getElementById('balanceChart_@currency').getContext('2d'), {
                    type: 'line',
                    data: {
                        labels: [@Html.Raw(string.Join(",", analysis.BalanceHistory.Select(b => $"'{b.FormattedDate}'")))],
                        datasets: [{
                            label: 'Balance',
                            data: [@Html.Raw(string.Join(",", analysis.BalanceHistory.Select(b => b.Balance.ToString("F2"))))],
                            borderColor: 'rgb(102, 126, 234)',
                            backgroundColor: 'rgba(102, 126, 234, 0.1)',
                            borderWidth: 3,
                            fill: true,
                            tension: 0.4,
                            pointRadius: 4,
                            pointHoverRadius: 6
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: { legend: { display: false } },
                        scales: {
                            y: {
                                beginAtZero: false,
                                grid: { color: 'rgba(0,0,0,0.05)' }
                            },
                            x: { grid: { display: false } }
                        }
                    }
                });
            }

            // Cash Flow Chart
            if (document.getElementById('cashFlowChart_@currency')) {
                new Chart(document.getElementById('cashFlowChart_@currency').getContext('2d'), {
                    type: 'bar',
                    data: {
                        labels: [@Html.Raw(string.Join(",", analysis.MonthlyAnalyses.Select(m => $"'{m.MonthName}'")))],
                        datasets: [
                            {
                                label: 'Income',
                                data: [@Html.Raw(string.Join(",", analysis.MonthlyAnalyses.Select(m => m.Income.ToString("F2"))))],
                                backgroundColor: 'rgba(16, 185, 129, 0.8)',
                            },
                            {
                                label: 'Expenses',
                                data: [@Html.Raw(string.Join(",", analysis.MonthlyAnalyses.Select(m => m.Expenses.ToString("F2"))))],
                                backgroundColor: 'rgba(239, 68, 68, 0.8)',
                            }
                        ]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: { legend: { position: 'bottom' } },
                        scales: {
                            y: {
                                beginAtZero: true,
                                grid: { color: 'rgba(0,0,0,0.05)' }
                            },
                            x: { grid: { display: false } }
                        }
                    }
                });
            }

            // Transaction Types Chart
            if (document.getElementById('transactionTypesChart_@currency')) {
                new Chart(document.getElementById('transactionTypesChart_@currency').getContext('2d'), {
                    type: 'doughnut',
                    data: {
                        labels: [@Html.Raw(string.Join(",", analysis.TransactionTypeAnalyses.Select(t => $"'{t.TransactionType.Replace("_", " ")}'")))],
                        datasets: [{
                            data: [@Html.Raw(string.Join(",", analysis.TransactionTypeAnalyses.Select(t => t.Count.ToString())))],
                            backgroundColor: [
                                'rgba(102, 126, 234, 0.8)',
                                'rgba(16, 185, 129, 0.8)',
                                'rgba(245, 158, 11, 0.8)',
                                'rgba(239, 68, 68, 0.8)',
                                'rgba(139, 92, 246, 0.8)',
                                'rgba(59, 130, 246, 0.8)'
                            ]
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: { legend: { position: 'bottom' } }
                    }
                });
            }

            // Yearly Chart
            if (document.getElementById('yearlyChart_@currency')) {
                new Chart(document.getElementById('yearlyChart_@currency').getContext('2d'), {
                    type: 'bar',
                    data: {
                        labels: [@Html.Raw(string.Join(",", analysis.YearlyAnalyses.Select(y => y.Year.ToString())))],
                        datasets: [{
                            label: 'Net Income',
                            data: [@Html.Raw(string.Join(",", analysis.YearlyAnalyses.Select(y => y.NetIncome.ToString("F2"))))],
                            backgroundColor: function(context) {
                                const value = context.parsed.y;
                                return value >= 0 ? 'rgba(16, 185, 129, 0.8)' : 'rgba(239, 68, 68, 0.8)';
                            }
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: { legend: { display: false } },
                        scales: {
                            y: {
                                beginAtZero: true,
                                grid: { color: 'rgba(0,0,0,0.05)' }
                            },
                            x: { grid: { display: false } }
                        }
                    }
                });
            }
            </text>
        }
    </script>
</body>
</html>
